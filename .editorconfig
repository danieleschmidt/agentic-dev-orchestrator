# EditorConfig helps maintain consistent coding styles
# between different editors and IDEs
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Configuration files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Docker Compose
[docker-compose*.yml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# GitHub Actions workflows
[.github/workflows/*.yml]
indent_style = space
indent_size = 2

# Python requirements files
[requirements*.txt]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 2
insert_final_newline = false

# Git configuration
[.gitconfig]
indent_style = tab
indent_size = 4

# License files
[LICENSE*]
indent_style = space
indent_size = 2

# Changelog
[CHANGELOG*]
indent_style = space
indent_size = 2

# ADO specific files
[backlog.yml]
indent_style = space
indent_size = 2

[backlog/*.json]
indent_style = space
indent_size = 2

[docs/status/*.json]
indent_style = space
indent_size = 2

[escalations/*.json]
indent_style = space
indent_size = 2

# Web files (if any)
[*.{html,css,js,ts}]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2